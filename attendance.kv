<AttendanceWindow>:
    orientation: "vertical"
    spacing: 20
    padding: 20

    # Header Label
    Label:
        text: "Facial Attendance System"
        color: 0.5, 0.5, 1, 1
        font_size: '32sp'
        size_hint_y: None
        height: '50dp'

    # Status Label
    Label:
        id: status_label
        text: "Click 'Start Attendance' to begin"
        font_size: '20sp'
        color: 1, 1, 1, 1
        size_hint_y: None
        height: '40dp'

    # Input box for name
    Label:
        text: "Enter your name:"
        font_size: '18sp'
        color: 1, 1, 1, 1
        size_hint_y: None
        height: '30dp'

    TextInput:
        id: name_input
        multiline: False
        hint_text: "Enter your name"
        font_size: '20sp'
        size_hint_y: None
        height: '40dp'

    # Buttons for start and stop
    BoxLayout:
        size_hint_y: None
        height: '50dp'
        spacing: 10

        Button:
            text: "Start Attendance"
            font_size: '20sp'
            on_press: root.start_attendance()

        Button:
            text: "Exit"
            font_size: '20sp'
            on_press: root.stop_attendance()